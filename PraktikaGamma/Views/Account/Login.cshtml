@{
}
@model PraktikaGamma.ViewModels.LoginViewModel

<div class="container d-flex justify-content-center log-or-val">
    <div class="card middle-card text-center align-middle">
        <h2>Вход в приложение</h2>
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="UserName"></label>          <br />
                <input asp-for="UserName" />                <br />
                <span asp-validation-for="UserName"></span>
            </div>
            <div>
                <label asp-for="Password"></label>          <br />
                <input asp-for="Password" />                <br />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="p-1">
                <input type="submit" asp-action="Register" asp-controller="Account" value="Регистрация" />
                <input type="submit" value="Войти" />
            </div>
        </form>
    </div>
</div>